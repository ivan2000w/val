<body>

    <div id="card">
        <div id="main-content">
            <h1>Will you be my Valentine? ‚ù§Ô∏è</h1>
            <div class="btn-wrap">
                <button id="yesBtn" onclick="showLove()">YES!</button>
                <button id="noBtn" onmouseover="moveButton()">No</button>
            </div>
        </div>

        <div id="celebration" class="hidden">
            <h1>Yay! I knew it! ü•∞</h1>
            <p>Prepare for the best Valentine's Day ever!</p>
        </div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');

        // This function teleports the No button
        function moveButton() {
            // Calculate random positions
            // Subtracting 100 to ensure it doesn't spawn partially off-screen
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 50);

            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;
        }

        // This function handles the "Yes" click
        function showLove() {
            document.getElementById('main-content').classList.add('hidden');
            document.getElementById('celebration').classList.remove('hidden');
            noBtn.style.display = 'none'; // Make sure No is gone
            
            // Add a little extra flair
            document.body.style.backgroundColor = "#ff4d6d";
        }

        // Set initial position of No button so it starts next to Yes
        window.onload = () => {
            const rect = noBtn.getBoundingClientRect();
            noBtn.style.left = rect.left + 'px';
            noBtn.style.top = rect.top + 'px';
        };
    </script>
</body>
</html>
